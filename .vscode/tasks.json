{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Neural Network",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "main.cpp",
                "NeuralNetwork.cpp",
                "NetworkLayer.cpp",
                "-o",
                "neural_network",
                "-std=c++11"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Neural Network",
            "type": "shell",
            "command": "./neural_network",
            "dependsOn": ["Build Neural Network"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
